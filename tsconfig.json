{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "declaration": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "moduleResolution": "node",
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true
}
